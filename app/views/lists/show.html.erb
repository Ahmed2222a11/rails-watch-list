<h2><%= @list.name %></h2>
<p><strong>My List</strong></p>
<p><% @list.bookmarks.each do |bookmark| %>
<%= bookmark.movie.title %>
  <img src="<%= bookmark.movie.poster_url %>" alt="Movie Poster" style="width: 150px; height: auto;">
  <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
<% end %>
</p>

<%= link_to "Back list", lists_path %>
<%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
